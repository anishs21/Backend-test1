<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/styles/main.css" />
    <link rel="stylesheet" href="/styles/style.css" />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css"
    />
    <title>Create New Posts</title>
  </head>
  <body>
    <%- include("./partials/header.ejs") %>

    <section class="createPostBox">
      <div id="postHeader">
        <h1><i class="bi bi-file-post"></i> Create A New Post</h1>

        <i
          class="exit-icon bi-box-arrow-left"
          onclick=" window.location.assign('/')"
        ></i>
      </div>
      <form class="content" action="/submit" method="post">
        <label for="title">Post Title</label>
        <input
          type="text"
          name="title"
          id="title"
          placeholder="Please Enter a Title !"
          required
        />

        <label for="user">Author Name</label>
        <input
          type="text"
          name="user"
          id="user"
          placeholder="Please Enter Your Name !"
          required
        />

        <label for="date"> Current Date</label>
        <input type="date" name="date" id="date" required />

        <label for="contents">Contents</label>
        <textarea
          type="text"
          name="content"
          id="contents"
          rows="5"
          placeholder="Please Add Your content !"
          maxlength="400"
          required
        ></textarea>
        <input class="submit" type="submit" value="Post" />
      </form>
      <div class="wordCount">
        <h3>0</h3>
        <span>Words used</span>
      </div>
    </section>
    <%- include("./partials/footer.ejs") %>

    <script src="/js/script.js"></script>
    <script src="/js/create_edit_post.js"></script>
  </body>
</html>
